# Web3 Prediction Market Arbitrage Bot Configuration
# Copy this file to .env and fill in your actual credentials

# ===== POLYMARKET CONFIGURATION =====
POLYMARKET_PRIVATE_KEY=your_ethereum_private_key_here
POLYMARKET_RPC_URL=https://polygon-rpc.com
POLYMARKET_CLOB_URL=https://clob.polymarket.com
POLYMARKET_GAMMA_URL=https://gamma-api.polymarket.com

# ===== KALSHI CONFIGURATION =====
KALSHI_EMAIL=your_email@example.com
KALSHI_PASSWORD=your_password_here
KALSHI_API_URL=https://api.elections.kalshi.com/trade-api/v2

# ===== MANIFOLD CONFIGURATION =====
MANIFOLD_API_KEY=your_manifold_api_key_here
MANIFOLD_API_URL=https://api.manifold.markets/v0

# ===== TRADING PARAMETERS =====
# Minimum profit percentage to consider an arbitrage opportunity
MIN_PROFIT_PERCENTAGE=1.0

# Maximum risk score (0-1, lower is more conservative)
MAX_RISK_SCORE=0.3

# Minimum confidence score required to execute trade
MIN_CONFIDENCE_SCORE=0.7

# ===== RISK MANAGEMENT =====
# Maximum size for a single position in USD
MAX_POSITION_SIZE=10000

# Maximum total exposure across all positions
MAX_TOTAL_EXPOSURE=50000

# Maximum exposure in a single market
MAX_SINGLE_MARKET_EXPOSURE=5000

# Stop loss percentage
STOP_LOSS_PERCENTAGE=5.0

# ===== MONITORING =====
# Scan interval in seconds
SCAN_INTERVAL=60

# Status report interval in seconds
STATUS_REPORT_INTERVAL=300

# ===== ALERTS (Optional) =====
# Slack webhook for alerts
SLACK_WEBHOOK_URL=

# Telegram bot token for alerts
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ===== DATABASE (Optional) =====
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost/arbitrage_bot

# ===== LOGGING =====
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE_PATH=logs/arbitrage_bot.log

# ===== ADVANCED =====
# Enable dry run mode (no actual trades)
DRY_RUN=true

# Enable backtesting mode
BACKTEST_MODE=false

# Number of concurrent API requests
MAX_CONCURRENT_REQUESTS=10

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Retry attempts for failed requests
MAX_RETRY_ATTEMPTS=3

# ===== NETWORK FEES =====
# Estimated gas price for Polygon (in GWEI)
POLYGON_GAS_PRICE=30

# Maximum gas price willing to pay (in GWEI)
MAX_GAS_PRICE=100

# ===== MARKET FILTERS =====
# Minimum liquidity required (in USD)
MIN_LIQUIDITY=10000

# Minimum volume required (in USD)
MIN_VOLUME=5000

# Maximum days until market resolution
MAX_DAYS_TO_RESOLUTION=30

# ===== SIMILARITY MATCHING =====
# Minimum similarity score for market matching (0-1)
MIN_SIMILARITY_SCORE=0.8

# Use advanced NLP for similarity matching
USE_ADVANCED_NLP=false

# ===== EXECUTION =====
# Order type (market, limit)
ORDER_TYPE=limit

# Slippage tolerance (percentage)
SLIPPAGE_TOLERANCE=1.0

# ===== NOTIFICATIONS =====
# Email for notifications
NOTIFICATION_EMAIL=

# Discord webhook for notifications
DISCORD_WEBHOOK_URL=
